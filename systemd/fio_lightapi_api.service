[Unit]
Description=FIO lightapi API

[Service]
Type=simple
Environment="LIGHTAPI_HOME=/opt/fio_light_api"
Environment="LISTEN=0.0.0.0:5201"
Environment="WORKERS=3"
EnvironmentFile=-/etc/default/fio_lightapi_api
ExecStart=/usr/local/bin/starman --listen ${LISTEN} --workers ${WORKERS} ${LIGHTAPI_HOME}/api/lightapi.psgi
TimeoutSec=45s
Restart=always
User=root
Group=daemon
KillMode=control-group



[Install]
WantedBy=multi-user.target


